<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>exec</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- Include project compiled classes -->
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!-- Also include the raw webapp (ensures WEB-INF/jsp is present) -->
        <fileSet>
            <directory>src/main/webapp</directory>
            <outputDirectory>/webapp</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>

    <!-- Unpack all runtime dependencies into the fat JAR -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <!-- Ensure JSTL jar is present under WEB-INF/lib so TLDs are discovered by Jetty/Jasper -->
        <dependencySet>
            <outputDirectory>/webapp/WEB-INF/lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>javax.servlet:jstl</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
